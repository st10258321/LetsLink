<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingBottom="14dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top-left back button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Zoom buttons -->
    <LinearLayout
        android:id="@+id/zoom_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp">

        <ImageButton
            android:id="@+id/zoom_in"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/zoom_in"
             />

        <ImageButton
            android:id="@+id/zoom_out"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/zoom_out"
           />

        <ImageButton
            android:id="@+id/zoom_normal"
            android:layout_width="48dp"
            android:scaleType="fitCenter"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/normalzoom"
            />
    </LinearLayout>

    <!-- Friend list wrapped in frosted card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/friend_list_card"
        android:layout_width="386dp"
        android:layout_height="285dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="70dp"
        android:background="@android:color/transparent"
        android:clipToOutline="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <!-- Blurred background view -->
        <View
            android:id="@+id/friend_list_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88FFFFFF" /> <!-- semi-transparent frosted effect -->

        <!-- Foreground content -->
        <LinearLayout
            android:id="@+id/friend_list"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:orientation="vertical"
            android:padding="8dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="358dp">

            <!-- Friend 1 -->
            <LinearLayout
                android:id="@+id/friend1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/friend1_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friend1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zalano"
                        android:textColor="@color/orange"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/friend1_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 m"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Friend 1 -->
            <LinearLayout
                android:id="@+id/friend4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/friend4_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friend4_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Derrick"
                        android:textColor="@color/orange"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/friend4_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 m"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Friend 2 -->
            <LinearLayout
                android:id="@+id/friend2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/friend2_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friend2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mpho"
                        android:textColor="@color/orange"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/friend2_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 m"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Friend 3 -->
            <LinearLayout
                android:id="@+id/friend3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/friend3_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friend3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neo"
                        android:textColor="@color/orange"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/friend3_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 m"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Compass Button -->
            <Button
                android:id="@+id/btn_compass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/orange"
                android:text="Open Friend Compass"
                android:textColor="@color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>
