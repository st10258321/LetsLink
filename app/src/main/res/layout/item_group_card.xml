<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/orange_primary"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/due_date_badge"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups Chat"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/noteDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="group placeholder."/>
            <TextView
                android:id="@+id/inviteLinkTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:textStyle="italic"
                android:maxLines="1"
                android:ellipsize="start"
                tools:text="http://10.0.2.2:3000/invite/a923-34..." />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/group_members_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Members"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/white"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.6"/>

                <TextView
                    android:id="@+id/group_events_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Events"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.8"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/white"
            android:layout_marginStart="16dp"
            android:contentDescription="Go to group chat"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>