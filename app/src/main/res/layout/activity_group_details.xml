<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/black"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:id="@+id/scroll_group_main"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@drawable/black_outline">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/header_group_details"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#444444"
				android:paddingVertical="12dp"
				android:paddingHorizontal="8dp"
				android:layout_marginTop="25dp"
				android:layout_marginBottom="31dp"
				android:elevation="6dp"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/img_group_icon"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginEnd="8dp"
					android:src="@mipmap/ic_launcher"
					android:scaleType="fitXY"/>

				<TextView
					android:id="@+id/txt_group_title"
					android:textColor="#F44A22"
					android:textSize="20sp"
					android:textStyle="bold"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:text="Group Details"/>

				<LinearLayout
					android:id="@+id/layout_group_actions"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:paddingRight="8dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/btn_view_members"
						android:textColor="#000000"
						android:textSize="16sp"
						android:layout_marginEnd="16dp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="👤"/>

					<TextView
						android:id="@+id/btn_group_settings"
						android:textColor="#000000"
						android:textSize="16sp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="⚙️"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/layout_group_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="24dp"
				android:layout_marginStart="12dp"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/img_group_avatar"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginEnd="12dp"
					android:scaleType="centerCrop"
					android:background="@drawable/whitebox_lower_edges" />


				<LinearLayout
					android:id="@+id/layout_group_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<TextView
						android:id="@+id/txt_group_name"
						android:textColor="#F44A22"
						android:textSize="16sp"
						android:textStyle="bold"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Group Name"/>

					<TextView
						android:id="@+id/txt_group_description"
						android:textColor="#F44A22"
						android:textSize="12sp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Description of the group"/>
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:id="@+id/txt_members_label"
				android:layout_width="91dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:layout_marginBottom="1dp"
				android:text="Members"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:textStyle="bold" />

			<LinearLayout
				android:id="@+id/layout_member_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:paddingVertical="12dp"
				android:layout_marginHorizontal="20dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/txt_member_icon_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="👤"
					android:textAlignment="center"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:layout_marginEnd="12dp" />

				<LinearLayout
					android:id="@+id/layout_member_info_1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:id="@+id/txt_member_name_1"
						android:textColor="@color/white"
						android:textSize="14sp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:textStyle="bold"
						android:text="Mpho"/>

					<TextView
						android:id="@+id/txt_member_role_1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Admin"
						android:textColor="@color/white"
						android:textSize="12sp"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/layout_member_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:paddingVertical="12dp"
				android:layout_marginHorizontal="20dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/txt_member_icon_2"
					android:textColor="#FFFFFF"
					android:textSize="20sp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="👤"
					android:layout_marginEnd="12dp" />

				<TextView
					android:id="@+id/txt_member_name_2"
					android:textColor="@color/white"
					android:textStyle="bold"
					android:textSize="14sp"
					android:layout_marginBottom="1dp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Neo"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/layout_member_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:paddingVertical="12dp"
				android:layout_marginHorizontal="20dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/txt_member_icon_3"
					android:textColor="#FFFFFF"
					android:textSize="20sp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="👤"
					android:layout_marginEnd="12dp" />

				<TextView
					android:id="@+id/txt_member_name_3"
					android:textColor="@color/white"
					android:textStyle="bold"
					android:textSize="14sp"
					android:layout_marginBottom="1dp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Zalano"/>
			</LinearLayout>

			<TextView
				android:id="@+id/txt_group_activities_label"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:textStyle="bold"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="31dp"
				android:layout_marginHorizontal="20dp"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Group Activities"/>

			<LinearLayout
				android:id="@+id/layout_activities_row"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				android:layout_marginHorizontal="8dp"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/card_messages"
					android:layout_width="101dp"
					android:layout_height="wrap_content"
					android:layout_marginEnd="8dp"
					android:background="@drawable/rec_outline_empty"
					android:orientation="vertical"
					android:paddingTop="12dp"
					android:paddingBottom="36dp">

					<TextView
						android:id="@+id/txt_messages_label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:layout_marginBottom="4dp"
						android:textStyle="bold"
						android:text="Messages"
						android:textColor="#F44A22"
						android:textSize="14sp" />

					<TextView
						android:id="@+id/txt_messages_count"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:text="120"
						android:textColor="#FFFFFF"
						android:textSize="20sp"
						android:textStyle="bold"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/card_events"
					android:layout_width="123dp"
					android:layout_height="wrap_content"
					android:layout_marginEnd="8dp"
					android:background="@drawable/rec_outline_empty"
					android:clickable="true"
					android:focusable="true"
					android:orientation="vertical"
					android:paddingVertical="12dp">

					<TextView
						android:id="@+id/txt_events_label"
						android:layout_width="wrap_content"
						android:textStyle="bold"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:layout_marginBottom="4dp"
						android:text="Events Created"
						android:textColor="#F44A22"
						android:textSize="14sp" />

					<TextView
						android:id="@+id/txt_events_count"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:layout_marginBottom="4dp"
						android:text="5"
						android:textColor="#FFFFFF"
						android:textSize="20sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/txt_events_plus"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:text="+1"
						android:textColor="#FFFFFF"
						android:textSize="14sp" />
				</LinearLayout>

				<LinearLayout
					android:id="@+id/card_tasks"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/rec_outline_empty"
					android:paddingVertical="12dp"
					android:clickable="true"
					android:focusable="true"
					android:orientation="vertical">

					<TextView
						android:id="@+id/txt_tasks_label"
						android:textColor="#F44A22"
						android:textSize="14sp"
						android:textStyle="bold"
						android:layout_marginBottom="4dp"
						android:layout_marginStart="12dp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="Tasks Completed" />

					<TextView
						android:id="@+id/txt_tasks_count"
						android:textColor="#FFFFFF"
						android:textSize="20sp"
						android:textStyle="bold"
						android:layout_marginBottom="4dp"
						android:layout_marginStart="12dp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="22" />

					<TextView
						android:id="@+id/txt_tasks_minus"
						android:textColor="#FFFFFF"
						android:textSize="14sp"
						android:layout_marginStart="12dp"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="-3" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/layout_buttons"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				android:orientation="vertical">

				<LinearLayout
					android:id="@+id/btn_create_event"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="12dp"
					android:layout_marginBottom="8dp"
					android:background="@drawable/rec_outline_black"
					android:clickable="true"
					android:focusable="true"
					android:gravity="center_horizontal"
					android:minHeight="48dp"
					android:orientation="vertical"
					android:paddingVertical="10dp">

					<TextView
						android:id="@+id/txt_create_event"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Create Event"
						android:textColor="#F44A22"
						android:textSize="16sp"
						android:textStyle="bold" />
				</LinearLayout>



				<LinearLayout
					android:id="@+id/btn_start_chat"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="15dp"
					android:background="@drawable/orange_rectangle"
					android:clickable="true"
					android:focusable="true"
					android:gravity="center_horizontal"
					android:minHeight="48dp"
					android:orientation="vertical"
					android:paddingVertical="10dp">

					<TextView
						android:id="@+id/txt_start_chat"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Start Chat"
						android:textColor="#000000"
						android:textSize="16sp"
						android:textStyle="bold" />
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:id="@+id/txt_recent_activity_label"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:textStyle="bold"
				android:layout_marginBottom="13dp"
				android:layout_marginStart="29dp"
				android:layout_marginEnd="226dp"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Recent Activity"/>

			<LinearLayout
				android:id="@+id/layout_recent_activity_row"
				android:layout_width="345dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="33dp"
				android:layout_marginBottom="39dp"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/card_recent_1"
					android:layout_width="146dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="48dp"
					android:background="@drawable/rec_outline_empty"
					android:gravity="center_horizontal"
					android:orientation="vertical">

					<LinearLayout
						android:id="@+id/card_recent_1_header"
						android:layout_width="146dp"
						android:layout_height="wrap_content"
						android:background="#12F44A22"
						android:gravity="center_horizontal"
						android:orientation="vertical"
						android:paddingHorizontal="15dp"
						android:paddingTop="56dp"
						android:paddingBottom="8dp">

						<TextView
							android:id="@+id/txt_recent_1_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="44dp"
							android:text="Weekly meeting"
							android:textColor="@color/white"
							android:textSize="12sp" />

						<LinearLayout
							android:id="@+id/layout_recent_1_progress"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

							<LinearLayout
								android:id="@+id/progress_bar_1_segment1"
								android:layout_width="20dp"
								android:layout_height="4dp"
								android:layout_marginEnd="4dp"
								android:background="@drawable/whitebox_extra_round_edges"
								android:orientation="horizontal" />

							<LinearLayout
								android:id="@+id/progress_bar_1_segment2"
								android:layout_width="4dp"
								android:layout_height="4dp"
								android:layout_marginEnd="4dp"
								android:background="@drawable/whitebox_extra_round_edges"
								android:orientation="horizontal" />

							<LinearLayout
								android:id="@+id/progress_bar_1_segment3"
								android:layout_width="4dp"
								android:layout_height="4dp"
								android:layout_marginEnd="4dp"
								android:background="@drawable/whitebox_extra_round_edges"
								android:orientation="horizontal" />

							<LinearLayout
								android:id="@+id/progress_bar_1_segment4"
								android:layout_width="4dp"
								android:layout_height="4dp"
								android:background="@drawable/whitebox_extra_round_edges"
								android:orientation="horizontal" />
						</LinearLayout>
					</LinearLayout>

					<LinearLayout
						android:id="@+id/card_recent_1_body"
						android:layout_width="wrap_content"
						android:layout_height="118dp"
						android:orientation="vertical"
						android:paddingVertical="8dp">

						<TextView
							android:id="@+id/txt_recent_1_body"
							android:layout_width="120dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginBottom="8dp"
							android:text="Don't forget the weekly meeting on Friday!"
							android:textColor="@color/white"
							android:textSize="12sp" />

						<LinearLayout
							android:id="@+id/layout_recent_1_user"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginHorizontal="8dp"
							android:gravity="center_vertical"
							android:orientation="horizontal">

							<LinearLayout
								android:id="@+id/recent_1_user_avatar"
								android:layout_width="20dp"
								android:layout_height="20dp"
								android:layout_marginEnd="8dp"
								android:background="@drawable/orangebox"
								android:orientation="horizontal" />

							<TextView
								android:id="@+id/txt_recent_1_user_name"
								android:layout_width="58dp"
								android:layout_height="wrap_content"
								android:layout_marginEnd="105dp"
								android:layout_marginBottom="1dp"
								android:text="Bob"
								android:textColor="#FFFFFF"
								android:textSize="12sp"
								android:textStyle="bold" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/card_recent_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/rec_outline_empty"
					android:gravity="center_horizontal"
					android:orientation="vertical">

					<LinearLayout
						android:id="@+id/card_recent_2_header"
						android:layout_width="151dp"
						android:layout_height="wrap_content"
						android:background="#12F44A22"
						android:gravity="center_horizontal"
						android:orientation="vertical"
						android:paddingHorizontal="15dp"
						android:paddingTop="56dp"
						android:paddingBottom="8dp">

						<TextView
							android:id="@+id/txt_recent_2_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="44dp"
							android:text="Weekly meeting"
							android:textColor="@color/white"
							android:textSize="12sp" />

						<LinearLayout
							android:id="@+id/layout_recent_2_progress"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

							<LinearLayout
								android:id="@+id/progress_bar_2_segment1"
								android:layout_width="20dp"
								android:layout_height="4dp"
								android:orientation="horizontal"
								android:layout_marginEnd="4dp"
								android:background="@drawable/whitebox_extra_round_edges" />

							<LinearLayout
								android:id="@+id/progress_bar_2_segment2"
								android:layout_width="4dp"
								android:layout_height="4dp"
								android:orientation="horizontal"
								android:layout_marginEnd="4dp"
								android:background="@drawable/whitebox_extra_round_edges" />

							<LinearLayout
								android:id="@+id/progress_bar_2_segment3"
								android:layout_width="4dp"
								android:layout_height="4dp"
								android:layout_marginEnd="4dp"
								android:background="@drawable/whitebox_extra_round_edges"
								android:orientation="horizontal" />

							<LinearLayout
								android:id="@+id/progress_bar_2_segment4"
								android:layout_width="4dp"
								android:layout_height="4dp"
								android:background="@drawable/whitebox_extra_round_edges"
								android:orientation="horizontal" />
						</LinearLayout>
					</LinearLayout>

					<LinearLayout
						android:id="@+id/card_recent_2_body"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:paddingVertical="8dp">

						<TextView
							android:id="@+id/txt_recent_2_body"
							android:layout_width="120dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginBottom="8dp"
							android:text="Don't forget the weekly meeting on Friday!"
							android:textColor="@color/white"
							android:textSize="12sp" />

						<LinearLayout
							android:id="@+id/layout_recent_2_user"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginHorizontal="8dp"
							android:gravity="center_vertical"
							android:orientation="horizontal">

							<LinearLayout
								android:id="@+id/recent_2_user_avatar"
								android:layout_width="20dp"
								android:layout_height="20dp"
								android:layout_marginEnd="8dp"
								android:background="@drawable/orangebox"
								android:orientation="horizontal" />

							<TextView
								android:id="@+id/txt_recent_2_user_name"
								android:layout_width="55dp"
								android:layout_height="wrap_content"
								android:layout_marginEnd="105dp"
								android:layout_marginBottom="1dp"
								android:text="Bob"
								android:textColor="#FFFFFF"
								android:textSize="12sp"
								android:textStyle="bold" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>