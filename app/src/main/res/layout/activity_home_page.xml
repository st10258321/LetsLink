<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Logo and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upcoming Events"
                android:textSize="32sp"
                android:textColor="@color/orange_primary"
                android:shadowColor="@color/gray"
                android:shadowDx="-4"
                android:shadowDy="-4"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Orange “shadow” view (goes first, behind the card) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:background="@color/orange_faded"
                    android:layout_margin="2dp"
                    android:translationZ="0dp" />
                <!-- Group Overview Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="24dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Background image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/event_image" />


                        <!-- Stats Grid pinned to bottom -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:columnCount="4"
                            android:rowCount="1"
                            android:background="@color/white"
                            android:alignmentMode="alignMargins"
                            android:columnOrderPreserved="false"
                            android:padding="1dp">

                            <!-- Chats -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="💬"
                                    android:textSize="20sp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chats"
                                    android:textSize="12sp"
                                    android:textColor="@color/orange_primary" />
                            </LinearLayout>

                            <!-- Events -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🎉"
                                    android:textSize="20sp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Events"
                                    android:textSize="12sp"
                                    android:textColor="@color/orange_primary" />
                            </LinearLayout>

                            <!-- To-Do -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✅"
                                    android:textSize="20sp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To-Do"
                                    android:textSize="12sp"
                                    android:textColor="@color/orange_primary" />
                            </LinearLayout>

                            <!-- Notifications -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🔔"
                                    android:textSize="20sp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Notifications"
                                    android:textSize="12sp"
                                    android:textColor="@color/orange_primary"
                                    android:textAlignment="center" />
                            </LinearLayout>

                        </GridLayout>

                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- Active Group Conversations -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Group Conversations"
                android:textSize="18sp"
                android:textColor="@color/orange_primary"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Mpho Tickets! Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                android:background="@drawable/rounded_card_background"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"

                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎫"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mpho Tickets!"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Active Group Conversations"
                            android:textSize="12sp"
                            android:textColor="@color/orange_primary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/orange_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Recent Chats Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Chats"
                android:textSize="18sp"
                android:textColor="@color/orange_primary"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />

            <!-- Chat List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Project Discussions -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:background="@drawable/rounded_card_background"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"

                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="💼"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_orange"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Project Discussions"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10 Messages"
                                android:textSize="12sp"
                                android:textColor="@color/orange_primary" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔥"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Family Group -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:background="@drawable/rounded_card_background"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="👨‍👩‍👧‍👦"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_blue"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Family Group"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5 Unread"
                                android:textSize="12sp"
                                android:textColor="@color/red" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="5"
                            android:textSize="12sp"
                            android:textColor="@color/orange_primary"
                            android:background="@drawable/circle_badge_red" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Party Plans -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:background="@drawable/rounded_card_background"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="🎊"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_purple"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Party Plans"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 Active"
                                android:textSize="12sp"
                                android:textColor="@color/green" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💬"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Upcoming Events Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upcoming Events"
                android:textSize="18sp"
                android:textColor="@color/orange_primary"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Events List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Birthday Party -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:background="@drawable/rounded_card_background"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="🎂"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_pink"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Birthday Party"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5 PM"
                                android:textSize="14sp"
                                android:textColor="@color/orange_primary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notifications"
                            app:tint="@color/orange_primary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Charity Run -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"

                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="🏃‍♂️"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg_green"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Charity Run"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="8 AM"
                                android:textSize="14sp"
                                android:textColor="@color/orange_primary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notifications"
                            app:tint="@color/orange_primary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Add Event Button -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Event"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/orange_primary"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_add"
                android:drawableTint="@color/orange_primary"
                android:drawablePadding="8dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>